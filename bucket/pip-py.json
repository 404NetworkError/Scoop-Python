{
    "version": "20.1",
    "homepage": "https://github.com/pypa/pip",
    "description": "Package installer for Python.",
    "license": "MIT",
    "depends": "python",
    "url": "https://github.com/pypa/pip/archive/20.1.zip",
    "hash": "48f8030ae499e84be9be7978d28cf18c2e6161e816cd8796b3c71c5fb1585bcf",
    "extract_dir": "pip-20.1",
    "installer": {
        "script": [
            "Push-Location $dir",
            "if ($global) { python setup.py --quiet install --record installed_files.txt }",
            "else { python setup.py --quiet install --user --record installed_files.txt }",
            "Pop-Location"
        ]
    },
    "uninstaller": {
        "script": [
            "Get-Content \"$dir\\installed_files.txt\" | Remove-Item -ErrorAction Ignore -Force",
            "if ($global) { $site_packages = \"$(Split-Path (scoop which python))\\lib\\site-packages\" }",
            "else { $site_packages = python.exe -m site --user-site }",
            "Get-ChildItem \"$site_packages\\pip-*-py*.egg\" | ForEach-Object { Remove-Item -ErrorAction Ignore -Force -Recurse $_ }"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/pypa/pip/archive/$version.zip",
        "extract_dir": "pip-$version"
    }
}

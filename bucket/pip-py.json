{
    "version": "21.0.1",
    "homepage": "https://github.com/pypa/pip",
    "description": "Package installer for Python.",
    "license": "MIT",
    "depends": "python-bucket-utils",
    "url": "https://github.com/pypa/pip/archive/21.0.1.zip",
    "hash": "50e860075ed85fa1bff281c322b615aa50bdd7d171fed8421a76cfe9f0253b64",
    "extract_dir": "pip-21.0.1",
    "installer": {
        "script": [
            "if ($global) { install-python-package --global --quiet --dir $dir }",
            "else { install-python-package --quiet --dir $dir }",
            "if ($LASTEXITCODE) { exit 1 }"
        ]
    },
    "uninstaller": {
        "script": [
            "if ($global) { uninstall-python-package $app --global --dir $dir }",
            "else { uninstall-python-package $app --dir $dir }"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/pypa/pip/archive/$version.zip",
        "extract_dir": "pip-$version"
    }
}

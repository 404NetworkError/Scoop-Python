{
    "version": "2020.05.08",
    "homepage": "https://ytdl-org.github.io/youtube-dl/",
    "description": "Command-line downloader for YouTube and other sites.",
    "license": "Unlicense",
    "depends": "python",
    "suggest": {
        "FFmpeg": [
            "ffmpeg-shared",
            "ffmpeg-nightly",
            "ffmpeg"
        ]
    },
    "url": "https://github.com/ytdl-org/youtube-dl/releases/download/2020.05.08/youtube-dl-2020.05.08.tar.gz",
    "hash": "86310db8516f41d697dc8923d4bb252ec110913e267a3c373b6a66a13552fd9b",
    "extract_dir": "youtube-dl",
    "installer": {
        "script": [
            "Push-Location $dir",
            "if ($global) { python setup.py --quiet install --record installed_files.txt }",
            "else { python setup.py --quiet install --user --record installed_files.txt }",
            "Pop-Location"
        ]
    },
    "uninstaller": {
        "script": [
            "(Get-Content \"$dir\\installed_files.txt\") -match '.*youtube.dl.*' | Remove-Item -ErrorAction Ignore -Force",
            "if ($global) { $site_packages = \"$(Split-Path (scoop which python))\\lib\\site-packages\" }",
            "else { $site_packages = python.exe -m site --user-site }",
            "Get-ChildItem \"$site_packages\\youtube_dl-*-py*.egg\" | Select-Object -First 1 | Remove-Item -ErrorAction Ignore -Force -Recurse"
        ]
    },
    "checkver": {
        "github": "https://github.com/ytdl-org/youtube-dl"
    },
    "autoupdate": {
        "url": "https://github.com/ytdl-org/youtube-dl/releases/download/$version/youtube-dl-$version.tar.gz",
        "hash": {
            "url": "$baseurl/SHA2-256SUMS"
        }
    }
}

{
    "version": "20.0.20",
    "homepage": "https://virtualenv.pypa.io/en/latest/",
    "description": "Virtual Python environment builder.",
    "license": "MIT",
    "depends": [
        "git",
        "python"
    ],
    "url": "https://raw.githubusercontent.com/TheRandomLabs/Scoop-Python/master/virtualenv.txt",
    "hash": "66b78de3a9371c93386d913e560855f60e840a317a375792a108e6bdcb8061f1",
    "installer": {
        "script": [
            "git clone --quiet -c advice.detachedHead=false --branch $version https://github.com/pypa/virtualenv.git \"$dir\\virtualenv\"",
            "Push-Location \"$dir\\virtualenv\"",
            "if ($global) { python setup.py --quiet install --record \"$dir\\installed_files.txt\" }",
            "else { python setup.py --quiet install --user --record \"$dir\\installed_files.txt\" }",
            "Pop-Location"
        ]
    },
    "uninstaller": {
        "script": [
            "Get-Content \"$dir\\installed_files.txt\" | Remove-Item -ErrorAction Ignore -Force",
            "if ($global) { $site_packages = \"$(Split-Path (scoop which python))\\lib\\site-packages\" }",
            "else { $site_packages = python.exe -m site --user-site }",
            "Get-ChildItem \"$site_packages\\virtualenv-$version*-py*.egg\" | Select-Object -First 1 | Remove-Item -ErrorAction Ignore -Force -Recurse"
        ]
    },
    "checkver": {
        "url": "https://api.github.com/repos/pypa/virtualenv/tags",
        "jsonPath": "$[0].name"
    }
}

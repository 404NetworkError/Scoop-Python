{
    "version": "46.2.0",
    "homepage": "https://github.com/pypa/setuptools",
    "description": "Library designed to facilitate packaging Python projects.",
    "license": "MIT",
    "depends": "python",
    "url": "https://github.com/pypa/setuptools/archive/v46.2.0.zip",
    "hash": "0fc60ce349d0cfa867917eb130ea479f9a6d4dbaa7319566f1d40d6383d51142",
    "extract_dir": "setuptools-46.2.0",
    "installer": {
        "script": [
            "Push-Location $dir",
            "python bootstrap.py",
            "if ($global) { python setup.py --quiet install --record installed_files.txt }",
            "else { python setup.py --quiet install --user --record installed_files.txt }",
            "Pop-Location"
        ]
    },
    "uninstaller": {
        "script": [
            "Get-Content \"$dir\\installed_files.txt\" | Remove-Item -ErrorAction Ignore -Force",
            "if ($global) { $site_packages = \"$(Split-Path (scoop which python))\\lib\\site-packages\" }",
            "else { $site_packages = python -m site --user-site }",
            "Get-ChildItem \"$site_packages\\setuptools-*-py*.egg\" | ForEach-Object { Remove-Item -ErrorAction Ignore -Force -Recurse $_ }"
        ]
    },
    "checkver": {
        "url": "https://api.github.com/repos/pypa/setuptools/tags",
        "regex": "v([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/pypa/setuptools/archive/v$version.zip",
        "extract_dir": "setuptools-$version"
    }
}

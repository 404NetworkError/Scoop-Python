{
    "version": "3.1.1",
    "homepage": "https://github.com/pypa/twine",
    "description": "Utilities for interacting with PyPI.",
    "license": "Apache-2.0",
    "depends": "python",
    "url": "https://github.com/pypa/twine/archive/3.1.1.zip",
    "hash": "957473c0939740bab95691483f8ade5e50da0d7f5f6a81271b79b0054047a9db",
    "extract_dir": "twine-3.1.1",
    "installer": {
        "script": [
            "Push-Location $dir",
            "if ($global) { python setup.py --quiet install --record installed_files.txt }",
            "else { python setup.py --quiet install --user --record installed_files.txt }",
            "Pop-Location"
        ]
    },
    "uninstaller": {
        "script": [
            "Get-Content \"$dir\\installed_files.txt\" | Remove-Item -ErrorAction Ignore -Force",
            "if ($global) { $site_packages = \"$(Split-Path (scoop which python))\\lib\\site-packages\" }",
            "else { $site_packages = python.exe -m site --user-site }",
            "Get-ChildItem \"$site_packages\\twine-*-py*.egg\" | ForEach-Object { Remove-Item -ErrorAction Ignore -Force -Recurse $_ }"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/pypa/twine/archive/$version.zip",
        "extract_dir": "twine-$version"
    }
}

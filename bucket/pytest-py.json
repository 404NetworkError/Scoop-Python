{
    "version": "5.4.2",
    "homepage": "https://docs.pytest.org/en/latest/",
    "description": "Test framework for Python.",
    "license": "MIT",
    "depends": [
        "git",
        "python"
    ],
    "url": "https://raw.githubusercontent.com/TheRandomLabs/Scoop-Python/master/placeholder.txt",
    "hash": "8f5572e508c2cb95197e550f54c6bc03cfd4668ef3c9f1011ec3950037cb4b11",
    "installer": {
        "script": [
            "git clone --quiet -c advice.detachedHead=false --branch $version https://github.com/pytest-dev/pytest.git \"$dir\\$app\"",
            "Push-Location \"$dir\\$app\"",
            "if ($global) { python setup.py --quiet install --record \"$dir\\installed_files.txt\" }",
            "else { python setup.py --quiet install --user --record \"$dir\\installed_files.txt\" }",
            "Pop-Location"
        ]
    },
    "uninstaller": {
        "script": [
            "Get-Content \"$dir\\installed_files.txt\" -match '.*py.?test.*' | Remove-Item -ErrorAction Ignore -Force",
            "if ($global) { $site_packages = \"$(Split-Path (scoop which python))\\lib\\site-packages\" }",
            "else { $site_packages = python -m site --user-site }",
            "Get-ChildItem \"$site_packages\\pytest-*-py*.egg\" | ForEach-Object { Remove-Item -ErrorAction Ignore -Force -Recurse $_ }"
        ]
    },
    "checkver": {
        "github": "https://github.com/pytest-dev/pytest"
    },
    "autoupdate": {
        "url": "https://raw.githubusercontent.com/TheRandomLabs/Scoop-Python/master/placeholder.txt"
    }
}
